<h1>バーガー・Burgers</h1>

<h2>作りたいバーガーを入力してください</h2>

<form>
    <div>
        <label for="burgName">Burger: </label>
        <input type="text" id="burgName" name="name">
    </div>

    <button type="submit">入力</button>
</form>

<div id="sell">
    <ul>
        {{#each burgers}}
            {{#unless this.devoured}}
                <li class="selection">'
                    {{this.name}}
                        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                            <input type="hidden" name="devoured" value="true">
                            <button type="submit">食べる</button>
                        </form>
                </li>
            {{/unless}}
        {{/each}}
    </ul>
</div>

<div id="eat">
    <ul>
        {{#each burgers}}
            {{#if this.devoured}}
                <li>
                    {{this.name}}
                </li>
            {{/if}}
        {{/each}}
    </ul>
</div>